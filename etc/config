# Config file of Unifi Controller Backup

# UCB log file
UCB_LOG_FILE=/var/log/ucb.log

# Directory where unifi_sh_api will be stored
UNIFI_SH_API_DIR=/usr/local/lib/ubc

# Basename of the unifi_sh_api
UNIFI_SH_API_BASENAME=unifi_sh_api

# Path for unifi sh api
UNIFI_SH_API_PATH=${UNIFI_SH_API_DIR}/${UNIFI_SH_API_BASENAME}-${UNIFI_VERSION}

# Base URL for download
UNIFI_SH_API_DOWNLOAD_URL=http://www.ubnt.com/downloads/unifi

# Backup directory where Unifi Controller Backup will be stored
BACKUP_DIR=/var/backups/unifi_controller

# Backup file name pattern
BACKUP_FILENAME=${BACKUP_DIR}/${DATE}-${UNIFI_HOSTNAME}-${site}.unf

# Delete file name pattern
DELETE_PATERN=${BACKUP_DIR}/*-${UNIFI_HOSTNAME}-${site}.unf


